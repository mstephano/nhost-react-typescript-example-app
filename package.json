{
  "name": "nhost-react-example-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/uuid": "^8.0.0",
    "classnames": "^2.2.6",
    "date-fns": "^2.14.0",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "nhost-js-sdk": "2.1.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.7.2",
    "react-nhost": "^1.1.10",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "tailwindcss": "^1.7.5",
    "typescript": "~3.7.2",
    "uuid": "^8.1.0"
  },
  "resolutions": {
    "graphql": "^14.0.0"
  },
  "scripts": {
    "start": "npm-run-all -p react:start watch:css",
    "react:start": "react-scripts start",
    "build": "yarn run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "apollo:generate": "apollo codegen:generate --target typescript --excludes=node_modules/* --includes=\"src/**/*.{ts,tsx}\" --endpoint http://localhost:8080/v1/graphql --header \"x-hasura-admin-secret: hejsan\" --tagName=gql --passthroughCustomScalars --customScalarsPrefix gql_ --outputFlat src/generated",
    "watch:css": "postcss src/styles/tailwind.css -o src/styles/app.css -w",
    "build:css": "postcss src/styles/tailwind.css -o src/styles/app.css",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "type-check": "tsc --noEmit",
    "format-check": "prettier --check .",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.3.2"
  }
}
